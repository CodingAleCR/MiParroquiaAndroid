<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/item_announcement"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/item_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        tools:text="Titulo del anuncio" />

    <TextView
        android:id="@+id/item_published_at"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/item_title"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        tools:text="14/01/2018" />

    <TextView
        android:id="@+id/item_type"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/item_published_at"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        tools:text="Tipo del anuncio" />

    <TextView
        android:id="@+id/item_description"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="3"
        app:layout_constraintStart_toStartOf="@+id/item_published_at"
        app:layout_constraintTop_toBottomOf="@id/item_published_at"
        tools:text="Este es un anuncio de prueba, a partir de aqui se encontraran los diferentes anuncios que desean mostrarse" />


</android.support.constraint.ConstraintLayout>