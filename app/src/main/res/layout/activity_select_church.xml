<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_keyline"
        android:layout_marginEnd="@dimen/base_keyline"
        android:layout_marginStart="@dimen/base_keyline"
        android:layout_marginTop="@dimen/base_keyline"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/base_keyline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/base_keyline"
            android:layout_marginEnd="@dimen/base_keyline"
            android:layout_marginStart="@dimen/base_keyline"
            android:layout_marginTop="@dimen/base_keyline"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_choose_parish" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_choose_parish" />

        <Spinner
            android:id="@+id/spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeightSmall" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="?android:listPreferredItemHeight"
            android:text="@string/btn_continue"
            android:theme="@style/AppTheme.Button" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>